<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE3D5"
    android:clipToOutline="true">

    <!-- 회원가입 제목 -->

    <!-- 아이디 입력 필드 -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:text="회원가입"
        android:textColor="@android:color/black"
        style="@style/Title1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/idInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="아이디 입력"
            android:textColor="#000000"
            style="@style/Body1_SemiBold"/>

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_w"
            android:hint="아이디"
            android:padding="10dp"
            android:textColorHint="#B0B0B0"
            android:inputType="textNoSuggestions"
            style="@style/Body1_Regular"/>
    </LinearLayout>

    <!-- 닉네임 입력 필드 -->
    <LinearLayout
        android:id="@+id/nicknameInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/idInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임 입력"
            android:textColor="#000000"
            android:paddingBottom="4dp"
            style="@style/Body1_SemiBold"/>

        <EditText
            android:id="@+id/editTextNickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_w"
            android:hint="닉네임"
            android:textColorHint="#B0B0B0"
            android:padding="10dp"
            android:inputType="textNoSuggestions"
            style="@style/Body1_Regular"/>
    </LinearLayout>

    <!-- 비밀번호 입력 필드 -->
    <LinearLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/nicknameInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 입력"
            android:textColor="#000000"
            android:paddingBottom="4dp"
            style="@style/Body1_SemiBold"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_w"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColorHint="#B0B0B0"
            android:padding="10dp"
            style="@style/Body1_Regular"/>

        <EditText
            android:id="@+id/editTextPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_w"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:textColorHint="#B0B0B0"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            style="@style/Body1_Regular"/>
    </LinearLayout>

    <!-- 이메일 입력 필드 -->
    <LinearLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/passwordInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 입력"
            android:textColor="#000000"
            android:paddingBottom="4dp"
            style="@style/Body1_SemiBold"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_w"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:textColorHint="#B0B0B0"
            android:padding="10dp"
            style="@style/Body1_Regular"/>
    </LinearLayout>

    <!-- 회원가입 버튼 -->

    <ImageButton
        android:id="@+id/register_button_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="52dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로 가기"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_arrow_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/register_submit_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_o"
        android:backgroundTint="@null"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        style="@style/Body1_Bold"
        app:layout_constraintTop_toBottomOf="@id/emailInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
