<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E15501"
    android:clipToOutline="true">

    <!-- 첫 번째 TextView -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:text="오직 당신만을 위한"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="193dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView" />

    <!-- 두 번째 TextView -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:text="스마트 도로반사경"
        android:textSize="24dp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이미지뷰 -->
    <ImageView
        android:id="@+id/group_24"
        android:layout_width="184dp"
        android:layout_height="184dp"
        android:src="@drawable/image_road_reflector"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 로그인 버튼 -->

    <!-- 회원가입 버튼 -->

    <Button
        android:id="@+id/start_signup_button"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/button_o_w"
        android:fontFamily="@font/pretendard_bold"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/start_login_button"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/button_o_w"
        android:fontFamily="@font/pretendard_bold"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>
